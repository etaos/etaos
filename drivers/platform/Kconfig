menu "Platform drivers"

config ARD_UNO
	bool "Arduino uno"
	depends on ATMEGA_GPIO && ATMEGA328
	help
	  Say 'y' here to build support for the Arduiono UNO
	  development board.

config ARD_MEGA
	bool "Arduino mega"
	depends on ATMEGA_GPIO && ATMEGA2560
	help
	  Say 'y' here to build support for the Arduino MEGA
	  development board.

endmenu
